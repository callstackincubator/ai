{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "preserve",
    "moduleResolution": "bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "customConditions": ["react-native"],
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true
  }
}
