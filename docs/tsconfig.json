{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@callstack/rspress-theme": ["../theme/src"],
      "@callstack/rspress-theme/*": ["../theme/src/*"],
      "@callstack/rspress-theme/plugin": ["../theme/src/plugin"],
      "@callstack/rspress-theme/plugin/*": ["../theme/src/plugin/*"]
    }
  },
  "include": ["docs", "theme", "rspress.config.ts"],
  "mdx": {
    "checkMdx": true
  }
}
